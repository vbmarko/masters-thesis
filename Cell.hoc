	sec_adj_mat = new Matrix(nSecAll,nSecAll)
	forsec all {
            sr = new SectionRef()
	    sr.sec {my_idx = v}
	    if(sr.has_parent){sr.parent {paren_idx = v}}
	    //printf("(%.0f,%.0f)\n",my_idx,paren_idx)
	    sec_adj_mat.x[my_idx][paren_idx] = 1
	    sec_adj_mat.x[paren_idx][my_idx] = 1}
	}
